{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy":
      "pwd && cd ./functions && npm install && npm install --only=dev && npm run build && cd ../",
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
